# more configurations https://marlam.de/msmtp/msmtprc.txt
defaults
port {{ getenv "MSMTP_PORT" "1025" }}
tls {{ getenv "MSMTP_TLS" "off" }}
logfile {{ getenv "MSMTP_LOGFILE" "/proc/self/fd/2" }}

account default
auth {{ getenv "MSMTP_AUTH" "off" }}
host {{ getenv "MSMTP_HOST" "mailhog" }}
from {{ getenv "MSMTP_FROM_DEFAULT" "default-mail@docker-lamp.example" }}
add_missing_date_header {{ getenv "MSMTP_ADD_MISSING_DATE_HEADER" "on" }}
#user {{ getenv "MSMTP_USER" "on" }}
#password {{ getenv "PASSWORD" "on" }}
